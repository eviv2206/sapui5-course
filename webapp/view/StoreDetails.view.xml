<mvc:View
        xmlns="sap.m"
        xmlns:f="sap.f"
        xmlns:layout="sap.ui.layout"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
        controllerName="yauheni.sapryn.controller.StoreDetails">

    <f:DynamicPage class="sapUiNoContentPadding" fitContent="true" showFooter="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:breadcrumbs>
                    <Breadcrumbs>
                        <Link text="Store list" target="StoreList" press="onLinkWithoutParamPress"/>
                        <Link text="Store details" target="StoreDetails" press="onLinkStoreDetailsPress"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
                <f:heading>
                    <Title text="Store details"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <HBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <HBox alignItems="Center">
                            <Label text="Email:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>Email}"/>
                        </HBox>
                        <HBox alignItems="Center">
                            <Label text="Phone Number:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>PhoneNumber}"/>
                        </HBox>
                        <HBox alignItems="Center">
                            <Label text="Address:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>Address}"/>
                        </HBox>
                    </VBox>

                    <VBox>
                        <HBox alignItems="Center">
                            <Label text="Established Date:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{
                        path: 'odata>Established',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {
                            pattern: 'dd MMM yyyy'
                        }
                        }"/>
                        </HBox>
                        <HBox alignItems="Center">
                            <Label text="Floor Area:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>FloorArea}"/>
                        </HBox>
                    </VBox>

                </HBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <IconTabBar
                        id="FilterBar"
                        select="onFilterSelect"
                >
                    <items>
                        <IconTabFilter
                                showAll="true"
                                text="ALL"
                                key="FilterAll"
                                id="FilterAll"
                        />
                        <IconTabSeparator/>
                        <IconTabFilter
                                icon="sap-icon://accept"
                                iconColor="Positive"
                                text="Ok"
                                key="OK"
                                id="FilterOk"
                        />
                        <IconTabFilter
                                icon="sap-icon://alert"
                                iconColor="Critical"
                                text="Storage"
                                key="STORAGE"
                                id="FilterStorage"
                        />
                        <IconTabFilter
                                icon="sap-icon://high-priority"
                                iconColor="Negative"
                                text="Out of stock"
                                key="OUT_OF_STOCK"
                                id="FilterOutOfStock"
                        />
                    </items>
                    <content>
                        <Table
                                items="{
                                    path: 'odata>rel_Products',
                                    sorter : {
                                        path : 'id'
                                    }
                                }"
                                sticky="ColumnHeaders"
                                class="sapUiContentPadding"
                                id="ProductsTable"
                        >
                            <headerToolbar>
                                <OverflowToolbar style="Clear">
                                    <Title id="title" text="Products"/>
                                    <ToolbarSpacer/>
                                    <SearchField
                                            placeholder="Enter value to search"
                                            width="30%"
                                            search="onProductSearch"
                                            id="ProductSearchField"
                                    />
                                </OverflowToolbar>
                            </headerToolbar>
                            <columns>
                                <Column width="15%">
                                    <FlexBox alignItems="Center">
                                        <Button
                                                icon="sap-icon://sort"
                                                type="Transparent"
                                                press="onSortButtonPress"
                                                app:sortBy="Name"
                                        />
                                        <Text text="Name"/>
                                    </FlexBox>
                                </Column>
                                <Column width="8%">
                                    <FlexBox alignItems="Center">
                                        <Button
                                                icon="sap-icon://sort"
                                                type="Transparent"
                                                press="onSortButtonPress"
                                                app:sortBy="Price"
                                        />
                                        <Text text="Price"/>
                                    </FlexBox>
                                </Column>
                                <Column width="12%">
                                    <FlexBox alignItems="Center">
                                        <Button
                                                icon="sap-icon://sort"
                                                type="Transparent"
                                                press="onSortButtonPress"
                                                app:sortBy="Specs"
                                        />
                                        <Text text="Specs"/>
                                    </FlexBox>
                                </Column>
                                <Column width="12%">
                                    <FlexBox alignItems="Center">
                                        <Button
                                                icon="sap-icon://sort"
                                                type="Transparent"
                                                press="onSortButtonPress"
                                                app:sortBy="SupplierInfo"
                                        />
                                        <Text text="Supplier Info"/>
                                    </FlexBox>
                                </Column>
                                <Column width="12%">
                                    <FlexBox alignItems="Center">
                                        <Button
                                                icon="sap-icon://sort"
                                                type="Transparent"
                                                press="onSortButtonPress"
                                                app:sortBy="MadeIn"
                                        />
                                        <Text text="Country of origin"/>
                                    </FlexBox>
                                </Column>
                                <Column width="12%">
                                    <FlexBox alignItems="Center">
                                        <Button
                                                icon="sap-icon://sort"
                                                type="Transparent"
                                                press="onSortButtonPress"
                                                app:sortBy="ProductionCompanyName"
                                        />
                                        <Text text="Prod. company"/>
                                    </FlexBox>
                                </Column>
                                <Column width="12%">
                                    <FlexBox alignItems="Center">
                                        <Button
                                                icon="sap-icon://sort"
                                                type="Transparent"
                                                press="onSortButtonPress"
                                                app:sortBy="Rating"
                                        />
                                        <Text text="Rating"/>
                                    </FlexBox>
                                </Column>
                                <Column>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem type="Navigation" press="onTableItemPress">
                                    <cells>
                                        <ObjectIdentifier title="{odata>Name}" text="{odata>id}"/>
                                        <ObjectNumber number="{odata>Price}" unit="USD"/>
                                        <Text wrapping="false" text="{odata>Specs}"/>
                                        <Text wrapping="false" text="{odata>SupplierInfo}"/>
                                        <Text wrapping="false" text="{odata>MadeIn}"/>
                                        <Text wrapping="false" text="{odata>ProductionCompanyName}"/>
                                        <RatingIndicator maxValue="5" editable="false" value="{odata>Rating}"/>
                                        <HBox justifyContent="End">
                                            <Button icon="sap-icon://edit" type="Transparent"/>
                                            <Button icon="sap-icon://message-error" type="Transparent" press="onDeleteProductButtonPress"/>
                                        </HBox>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </content>
                </IconTabBar>
            </VBox>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <FlexBox justifyContent="End" width="100%">
                    <Button type="Ghost" text="Create" icon="sap-icon://add" class="sapUiTinyMarginEnd" press="onCreateProductButtonPress"/>
                    <Button type="Reject" text="Delete" icon="sap-icon://delete" class="sapUiTinyMarginEnd" press="onDeleteStoreButtonPress" />
                </FlexBox>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>