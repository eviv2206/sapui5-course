<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:f="sap.ui.layout.form"
        xmlns:core="sap.ui.core">
    <Dialog>
        <f:SimpleForm
                maxContainerCols="1"
                layout="ResponsiveGridLayout"
                labelSpanL="12"
                labelSpanM="12"
                emptySpanL="0"
                emptySpanM="0"
                columnsL="1"
                columnsM="1">
            <f:content>
                <Label text="Name" required="true" labelFor="NameInput"/>
                <Input
                        placeholder="Enter name"
                        value="{
                            path: 'Name',
                            type: 'sap.ui.model.type.String',
                            constraints: {
                                minLength: 1
                            }
                        }"
                        valueStateText="Name is required"
                        required="true"
                        id="NameInput"
                        liveChange="onLiveChange"
                />

                <Label text="Email" required="true" labelFor="EmailInput"/>
                <Input
                       placeholder="Enter email"
                       value="{
                            path: 'Email',
                            type: 'yauheni.sapryn.type.EmailType'
                       }"
                       valueStateText="Email is required"
                       type="Email"
                       required="true"
                       id="EmailInput"
                       liveChange="onLiveChange"
                />


                <Label text="Phone number" required="true" labelFor="PhoneNumberInput"/>
                <Input
                        placeholder="Enter phone number"
                        value="{
                            path: 'PhoneNumber',
                            type: 'sap.ui.model.type.String',
                            constraints: {
                                minLength: 1
                            }
                        }"
                        valueStateText="Phone number is required"
                        type="Tel"
                        required="true"
                        id="PhoneNumberInput"
                        liveChange="onLiveChange"
                />

                <Label text="Address" required="true" labelFor="AddressInput"/>
                <Input
                        placeholder="Enter address"
                        value="{
                            path: 'Address',
                            type: 'sap.ui.model.type.String',
                            constraints: {
                                minLength: 1
                            }
                        }"
                        valueStateText="Address is required"
                        required="true"
                        id="AddressInput"
                        liveChange="onLiveChange"
                />

                <Label text="Established" required="true" labelFor="EstablishedInput"/>
                <DatePicker
                        value="{
							path: 'Established',
							type: 'sap.ui.model.type.Date',
							formatOptions: {
								pattern: 'MMM-dd-yy'
							}
						}"
                        valueStateText="Date should be earlier than today"
                        required="true"
                        id="EstablishedInput"
                        liveChange="onLiveChange"
                />

                <Label text="Floor Area" required="true" labelFor="FloorAreaInput"/>
                <Input
                        placeholder="Enter floor area"
                        value="{
                            path: 'FloorArea',
                            type: 'sap.ui.model.type.Integer',
                            constraints: {
                                minimum: 1
                            }
                        }"
                        valueStateText="Floor area is required and must be greater than 0"
                        type="Number"
                        required="true"
                        id="FloorAreaInput"
                        change="onLiveChange"
                />
            </f:content>
        </f:SimpleForm>

        <buttons>
            <Button text="Create" press="onDialogCreateBtn"/>
            <Button text="Close" press="onDialogCancelBtn"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
