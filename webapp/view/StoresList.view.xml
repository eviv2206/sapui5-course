<mvc:View
        xmlns="sap.m"
        xmlns:f="sap.f"
        xmlns:mvc="sap.ui.core.mvc"
        controllerName="yauheni.sapryn.controller.StoresList">

    <f:DynamicPage class="sapUiNoContentPadding" showFooter="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:breadcrumbs>
                    <Breadcrumbs currentLocationText="Store list"/>
                </f:breadcrumbs>
                <f:heading>
                    <Title text="Store list"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <SearchField placeholder="Search..." showRefreshButton="true" search="onSearch"/>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <List items="{/Stores}" id="StoresList">
                <ObjectListItem
                        type="Active"
                        title="{Name}"
                        number="{FloorArea}"
                        numberUnit="sq.m"
                        press="onListItemPress"
                >
                    <ObjectAttribute text="{Address}"/>
                </ObjectListItem>
            </List>
        </f:content>
        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Ghost" text="Create" icon="sap-icon://add" class="sapUiTinyMarginEnd"
                        press="onCreateBtnPress"/>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>