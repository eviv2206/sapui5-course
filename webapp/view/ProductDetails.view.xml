<mvc:View
        xmlns="sap.m"
        xmlns:f="sap.f"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        core:require="{formatMessage: 'sap/base/strings/formatMessage'}"
        controllerName="yauheni.sapryn.controller.ProductDetails"
>

    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:breadcrumbs>
                    <Breadcrumbs currentLocationText="Product details">
                        <Link text="Store list" target="StoreList" press="onLinkWithoutParamPress"/>
                        <Link text="Store details" press="onLinkStoreDetailsPress"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
                <f:heading>
                    <Title text="{
                        parts: [
                            'i18n>ProductDetails',
                            'Name'
                        ],
                        formatter: 'formatMessage'
                    }"/>

                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <HBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <HBox alignItems="Center">
                            <Label text="Price" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"
                                   showColon="true" labelFor="PriceText"/>
                            <Text
                                text="{Price} USD"
                                id="PriceText"/>
                        </HBox>
                        <HBox alignItems="Center">
                            <Label text="Rating" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"
                                   showColon="true" labelFor="RatingText"/>
                            <Text text="{Rating}" id="RatingText"/>
                        </HBox>
                    </VBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <HBox alignItems="Center">
                            <Label text="Made in" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"
                                   showColon="true" labelFor="MadeInText"/>
                            <Text text="{MadeIn}" id="MadeInText"/>
                        </HBox>
                    </VBox>
                    <VBox>
                        <HBox alignItems="Center">
                            <Label text="Production company" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"
                                   showColon="true" labelFor="ProductionCompanyNameText"/>
                            <Text text="{ProductionCompanyName}" id="ProductionCompanyNameText"/>
                        </HBox>
                        <HBox alignItems="Center">
                            <Label text="Status" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"
                                   showColon="true" labelFor="ProductStatus"/>
                            <ObjectStatus
                                    text="{path: 'Status', formatter: '.formatStatus'}"
                                    state="{path: 'Status', formatter: '.formatState'}"
                                    inverted="true"
                                    active="true"
                                    id="ProductStatus"
                            />
                            <Text/>
                        </HBox>
                    </VBox>
                </HBox>
                <VBox>
                    <HBox alignItems="Center">
                        <Label text="Specs" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd" showColon="true"
                               labelFor="SpecsText"/>
                        <Text text="{Specs}" id="SpecsText"/>
                    </HBox>
                    <HBox alignItems="Center">
                        <Label text="Supplier info" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"
                               showColon="true" labelFor="SupplierInfoText"/>
                        <Text text="{SupplierInfo}" id="SupplierInfoText"/>
                    </HBox>
                </VBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <VBox>
                    <HBox alignItems="Center">
                        <Label text="Author name" class="sapUiTinyMarginEnd" required="true" labelFor="AuthorInput"/>
                        <Input
                                placeholder="Enter author name..."
                                valueStateText="Author name is required!"
                                value="{
                                    path : 'appView>/Author',
                                    type : 'sap.ui.model.type.String',
                                    constraints : {
                                        minLength: 1
                                    }
                                }"
                                id="AuthorInput"
                                change="onAuthorChange"
                        />
                        <Label text="Rating" class="sapUiTinyMarginEnd" labelFor="RatingIndicator"/>
                        <RatingIndicator
                                editable="true"
                                maxValue="5"
                                required="true"
                                value="{appView>/Rating}"
                                id="RatingIndicator"
                        />
                    </HBox>
                    <FeedInput
                            placeholder="Post something here"
                            showIcon="true"
                            value="{
                                path : 'appView>/Comment',
                                type : 'sap.ui.model.type.String',
				                constraints : {
					                minLength: 1,
					                maxLength: 30
				                }
                            }"
                            id="CommentInput"
                            post="onPostCommentSend"
                    />
                </VBox>
                <List
                        id="CommentsList"
                        showSeparators="Inner"
                        items="{/ProductComments}"
                >
                    <FeedListItem
                            sender="{Author}"
                            info="{Type}"
                            timestamp="Rating: {Rating} Posted: {
                                path: 'Posted',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'dd MMM yyyy'
                                }
                            }"
                            text="{Message}"
                            iconDensityAware="false"
                            convertLinksToAnchorTags="All"
                    />
                </List>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>