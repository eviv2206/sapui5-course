<mvc:View
        xmlns="sap.m"
        xmlns:f="sap.f"
        xmlns:form="sap.ui.layout.form"
        xmlns:layout="sap.ui.layout"
        xmlns:mvc="sap.ui.core.mvc"
        controllerName="yauheni.sapryn.controller.ProductDetails">

    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:breadcrumbs>
                    <Breadcrumbs>
                        <Link text="Store list" target="StoreList" press="onLinkWithoutParamPress"/>
                        <Link text="Store details" press="onLinkStoreDetailsPress"/>
                        <Link text="Product details" target="ProductDetails" press="onLinkProductDetailsPress"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
                <f:heading>
                    <Title text="Product Details ({odata>Name})"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <layout:HorizontalLayout>
                    <layout:VerticalLayout class="sapUiSmallMarginEnd">
                        <FlexBox alignItems="Center">
                            <Label text="Price:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>Price} USD"/>
                        </FlexBox>
                        <FlexBox alignItems="Center">
                            <Label text="Rating:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>Rating}"/>
                        </FlexBox>
                    </layout:VerticalLayout>
                    <layout:VerticalLayout class="sapUiSmallMarginEnd">
                        <FlexBox alignItems="Center">
                            <Label text="Made in:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>MadeIn}"/>
                        </FlexBox>
                    </layout:VerticalLayout>
                    <layout:VerticalLayout>
                        <FlexBox alignItems="Center">
                            <Label text="Production company:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>ProductionCompanyName}"/>
                        </FlexBox>
                        <FlexBox alignItems="Center">
                            <Label text="Status:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <ObjectStatus
                                    text="{path: 'odata>Status', formatter: '.formatStatus'}"
                                    state="{path: 'odata>Status', formatter: '.formatState'}"
                                    inverted="true"
                                    active="true"
                                    id="ProductStatus"
                            />
                            <Text/>
                        </FlexBox>
                    </layout:VerticalLayout>
                </layout:HorizontalLayout>
                <layout:VerticalLayout>
                    <FlexBox alignItems="Center">
                        <Label text="Specs:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                        <Text text="{odata>Specs}"/>
                    </FlexBox>
                    <FlexBox alignItems="Center">
                        <Label text="Supplier info:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                        <Text text="{odata>SupplierInfo}"/>
                    </FlexBox>
                </layout:VerticalLayout>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <form:SimpleForm
                        layout="ResponsiveGridLayout"
                        >
                    <form:content>
                        <FlexBox direction="Column">
                            <FlexBox alignItems="Center">
                                <Label text="Author name:" class="sapUiSmallMarginEnd"/>
                                <Input placeholder="Enter name" value="{viewModel>/authorName}" required="true"/>
                                <Label text="Rating:" class="sapUiSmallMarginEnd"/>
                                <RatingIndicator editable="true" maxValue="5" value="{viewModel>/ratingValue}"
                                                 required="true"/>
                            </FlexBox>
                            <FeedInput
                                    placeholder="Post something here"
                                    showIcon="true"
                            />
                        </FlexBox>
                    </form:content>
                </form:SimpleForm>
                <List
                        id="CommentsList"
                        showSeparators="Inner"
                        items="{odata>/ProductComments}"
                >
                    <FeedListItem
                            sender="{odata>Author}"
                            info="{odata>Type}"
                            timestamp="Rating: {odata>Rating} Posted: {
                                path: 'odata>Posted',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'dd MMM yyyy'
                                }
                            }"
                            text="{odata>Message}"
                            iconDensityAware="false"
                            convertLinksToAnchorTags="All"
                    />
                </List>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>