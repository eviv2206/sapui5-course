<mvc:View
        xmlns="sap.m"
        xmlns:f="sap.f"
        xmlns:form="sap.ui.layout.form"
        xmlns:layout="sap.ui.layout"
        xmlns:mvc="sap.ui.core.mvc"
        controllerName="yauheni.sapryn.controller.ProductDetails">

    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:breadcrumbs>
                    <Breadcrumbs>
                        <Link text="Store list" target="StoreList" press="onLinkWithoutParamPress"/>
                        <Link text="Store details" press="onLinkStoreDetailsPress"/>
                        <Link text="Product details" target="ProductDetails" press="onLinkProductDetailsPress"/>
                    </Breadcrumbs>
                </f:breadcrumbs>
                <f:heading>
                    <Title text="Product Details ({odata>Name})"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <HBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <HBox alignItems="Center">
                            <Label text="Price:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>Price} USD"/>
                        </HBox>
                        <HBox alignItems="Center">
                            <Label text="Rating:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>Rating}"/>
                        </HBox>
                    </VBox>
                    <VBox class="sapUiSmallMarginEnd">
                        <HBox alignItems="Center">
                            <Label text="Made in:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>MadeIn}"/>
                        </HBox>
                    </VBox>
                    <VBox>
                        <HBox alignItems="Center">
                            <Label text="Production company:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <Text text="{odata>ProductionCompanyName}"/>
                        </HBox>
                        <HBox alignItems="Center">
                            <Label text="Status:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                            <ObjectStatus
                                    text="{path: 'odata>Status', formatter: '.formatStatus'}"
                                    state="{path: 'odata>Status', formatter: '.formatState'}"
                                    inverted="true"
                                    active="true"
                                    id="ProductStatus"
                            />
                            <Text/>
                        </HBox>
                    </VBox>
                </HBox>
                <VBox>
                    <HBox alignItems="Center">
                        <Label text="Specs:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                        <Text text="{odata>Specs}"/>
                    </HBox>
                    <HBox alignItems="Center">
                        <Label text="Supplier info:" design="Bold" vAlign="Middle" class="sapUiTinyMarginEnd"/>
                        <Text text="{odata>SupplierInfo}"/>
                    </HBox>
                </VBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <VBox>
                <VBox>
                    <HBox alignItems="Center">
                        <Label text="Author name:" class="sapUiSmallMarginEnd" required="true" labelFor="AuthorInput"/>
                        <Input
                                placeholder="Enter author name..."
                                valueStateText="Author name is required!"
                                value="{
                                    path : 'appView>/Author',
                                    type : 'sap.ui.model.type.String',
                                    constraints : {
                                        minLength: 1
                                    }
                                }"
                                id="AuthorInput"
                                change="onAuthorChange"
                        />
                        <Label text="Rating:" class="sapUiSmallMarginEnd" labelFor="RatingIndicator"/>
                        <RatingIndicator
                                editable="true"
                                maxValue="5"
                                required="true"
                                value="{appView>/Rating}"
                                id="RatingIndicator"
                        />
                    </HBox>
                    <FeedInput
                            placeholder="Post something here"
                            showIcon="true"
                            value="{
                                path : 'appView>/Comment',
                                type : 'sap.ui.model.type.String',
				                constraints : {
					                minLength: 1,
					                maxLength: 30
				                }
                            }"
                            id="CommentInput"
                            post="onPostCommentSend"
                    />
                </VBox>
                <List
                        id="CommentsList"
                        showSeparators="Inner"
                        items="{odata>/ProductComments}"
                >
                    <FeedListItem
                            sender="{odata>Author}"
                            info="{odata>Type}"
                            timestamp="Rating: {odata>Rating} Posted: {
                                path: 'odata>Posted',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'dd MMM yyyy'
                                }
                            }"
                            text="{odata>Message}"
                            iconDensityAware="false"
                            convertLinksToAnchorTags="All"
                    />
                </List>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>